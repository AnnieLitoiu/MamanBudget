{% extends 'base.html.twig' %}
{% block title %}Choix familial{% endblock %}

{% block stylesheets %}
<style>
  .container-setup {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  .deco-bubble {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(230, 69, 111, 0.1), rgba(255, 229, 224, 0.3));
    pointer-events: none;
    animation: float 6s ease-in-out infinite;
  }

  .deco-bubble:nth-child(1) {
    width: 100px;
    height: 100px;
    top: 10%;
    left: 8%;
    animation-delay: 0s;
  }

  .deco-bubble:nth-child(2) {
    width: 140px;
    height: 140px;
    top: 60%;
    right: 10%;
    animation-delay: 2s;
  }

  .deco-bubble:nth-child(3) {
    width: 80px;
    height: 80px;
    bottom: 20%;
    left: 15%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }

  .setup-header {
    text-align: center;
    margin-bottom: 2rem;
    animation: fadeInDown 0.8s ease-out;
    z-index: 1;
  }

  .setup-header h1 {
    font-size: 3rem;
    color: var(--colorFuchia);
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(230, 69, 111, 0.2);
    font-weight: bold;
  }

  .setup-header p {
    font-size: 1.6rem;
    color: #555;
    max-width: 750px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .setup-form-wrapper {
    max-width: 700px;
    width: 100%;
    background: white;
    border-radius: 1.5rem;
    padding: 3rem 2.5rem;
    box-shadow: 0 8px 20px rgba(230, 69, 111, 0.15);
    border: 3px solid rgba(230, 69, 111, 0.1);
    animation: fadeInUp 1s ease-out 0.3s backwards;
    z-index: 1;
  }

  fieldset { border: none; padding: 0; margin-bottom: 2.5rem; }
  fieldset:last-of-type { margin-bottom: 2rem; }

  legend {
    font-size: 1.8rem;
    font-weight: bold;
    color: var(--colorFuchia);
    margin-bottom: 1.5rem;
    display: block;
  }

  .form-check {
    position: relative;
    display: flex;
    align-items: center;
    padding: 1.4rem 1.8rem;
    margin-bottom: 1rem;
    background: #f8f9fa;
    border-radius: 1rem;
    border: 2px solid #e0e0e0;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .form-check:hover {
    background: rgba(230, 69, 111, 0.05);
    border-color: var(--colorFuchia);
    transform: translateX(5px);
  }

  .form-check-input {
    appearance: none;
    -webkit-appearance: none;
    margin-right: 1.2rem;
    cursor: pointer;
    width: 28px;
    height: 28px;
    border: 3px solid #d0d0d0;
    border-radius: 50%;
    background: white;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .form-check-input:checked {
    border-color: var(--colorFuchia);
    background: var(--colorFuchia);
    box-shadow: 0 0 0 3px rgba(230, 69, 111, 0.1);
  }

  .form-check-input:checked::after {
    content: '';
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 12px; height: 12px;
    background: white;
    border-radius: 50%;
  }

  .form-check-label {
    cursor: pointer;
    font-size: 1.7rem;
    color: #333;
    font-weight: 500;
    flex: 1;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .btn-submit {
    width: 100%;
    padding: 1rem 2rem;
    background: var(--colorFuchia);
    color: white;
    border: none;
    border-radius: 2rem;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 2rem;
  }

  .btn-retour {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.8rem 2rem;
    background: white;
    color: var(--colorFuchia);
    border-radius: 2rem;
    border: 2px solid var(--colorFuchia);
    font-weight: bold;
    text-decoration: none;
  }
</style>
{% endblock %}

